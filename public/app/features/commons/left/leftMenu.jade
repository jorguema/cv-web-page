                  p {{'RESUME'|translate}}
         li(ng-class="{ 'resume-clicked': optionSelected == 'experience' }")
            a.clickable(data-ng-click="experience()")
               div.image-section
                  img(data-ng-src="/public/content/images/experience.svg")
               div.menu-section
                  p {{'EXPERIENCE'|translate}}
         li(ng-class="{ 'resume-clicked': optionSelected == 'contact' }")
            a.clickable(data-ng-click="contact()")
               div.image-section
                  img(data-ng-src="/public/content/images/contact.svg")
               div.menu-section
                  p {{'CONTACT'|translate}}
